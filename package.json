{
  "name": "jmchiltondotnet",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run preprocess:resume && concurrently \"npm run dev:resume\" \"astro dev\"",
    "dev:resume": "node scripts/watch-resume.js",
    "build": "astro build",
    "prebuild": "npm run build:pdfs",
    "build:pdfs": "npm run preprocess:resume && npm run build:resume-pdf && npm run build:cv-pdf && npm run copy:pdfs",
    "build:resume-pdf": "rendercv render src/data/resume.yaml -o rendercv_output/resume",
    "build:cv-pdf": "rendercv render src/data/cv.yaml -o rendercv_output/cv",
    "copy:pdfs": "mkdir -p public && cp rendercv_output/resume/*.pdf public/resume.pdf && cp rendercv_output/cv/*.pdf public/cv.pdf",
    "preprocess:resume": "npm run validate:resume && node scripts/build-resume-variants.js",
    "validate:resume": "node scripts/validate-resume-main.js",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "typecheck": "astro check",
    "prepare": "husky",
    "obsidian": "open 'obsidian://open?path='$(pwd)/src/content"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.7",
    "@astrojs/tailwind": "^6.0.2",
    "@tailwindcss/typography": "^0.5.19",
    "astro": "^5.14.8",
    "github-markdown-css": "^5.8.1",
    "js-yaml": "^4.1.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.4.18"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "yaml": "^2.8.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.astro": [
      "prettier --write"
    ],
    "*.{json,md,mdx,css}": [
      "prettier --write"
    ]
  }
}
